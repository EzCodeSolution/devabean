<%- include('partials/header') %>
     <!-- PAGE CONTAINER-->
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12" >
                                <div class="card">
                                    <div class="card-header">
                                        <strong class="card-title">  <h3 class="title-5">จัดการสินค้า</h3></strong>
                                    </div>
                                    <div class="card-body" style="background-color: rgb(242, 242, 242);">
                                           <!-- DATA TABLE -->
                              
                                <div class="table-data__tool" >
                                    <div class="table-data__tool-left">
                                        <div class="rs-select2--light rs-select2--md">
                                            <select class="js-select2" name="property">
                                                <option selected="selected">All Properties</option>
                                                <option value="">Option 1</option>
                                                <option value="">Option 2</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                        <div class="rs-select2--light rs-select2--sm">
                                            <select class="js-select2" name="time">
                                                <option selected="selected">Today</option>
                                                <option value="">3 Days</option>
                                                <option value="">1 Week</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                        <button class="au-btn-filter">
                                            <i class="zmdi zmdi-filter-list"></i>filters</button>
                                    </div>
                                    <div class="table-data__tool-right">
                                        <a href="/admin/addproduct" class="au-btn au-btn-icon au-btn--green au-btn--small" >
                                            <i class="zmdi zmdi-plus"></i>add item</a>
                                    </div>
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr style="text-align: center;">
                                                <th >ลำดับ</th>
                                                <th>ชื่อ</th>
                                                <th>ชื่อรอง</th>
                                                <th>Description</th>
                                                <th>Status</th>
                                                <th>Price</th>
                                                <th>วันที่อัพเดท</th>
                                                <th>Manage</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <% var i = 0; product.forEach(x => {  i++%>
                                            <tr class="tr-shadow">
                                                <td>
                                            
                                                    <%= i %>
                                                </td>
                                                <td><%= x.Name %></td>
                                                <td>
                                                    <%= x.Subname %>
                                                </td>
                                                <td> <%= x.Description %> </td>
                                                
                                                <td>
                                                    <span style="color: rgb(191, 191, 0);"> <%= x.Status %></span>
                                                <td>
                                                    <span > <%= x.Price %></span>
                                                </td>
                                                <td> <%=   moment(x.updatedAt).format('MMMM Do YYYY, h:mm:ss')  %></td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <form action="/admin/stock" method="POST">
                                                            <input type="hidden" value="<%= x.id %>"  name="id">
                                                            <button type="submit" class="item" title="จัดการ Stock" >
                                                                <i class="zmdi zmdi-mail-send"></i>
                                                            </button>
                                                        </form>
                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                            <i class="zmdi zmdi-edit"></i>
                                                        </button>
                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                            <i class="zmdi zmdi-delete"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
<%- include('partials/footer') %>